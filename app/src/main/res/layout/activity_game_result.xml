<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".GameResult">

    <ImageView
        android:id="@+id/background_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="최고 점수: "
        android:layout_marginLeft="160dp"
        android:fontFamily="@font/app_main_font"
        android:id="@+id/highestScoreTxt"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/app_main_font"
        android:text="점수: "
        android:id="@+id/ScoreTxt"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="200dp"
        android:text="학점: "
        android:fontFamily="@font/app_main_font"
        android:id="@+id/meanScoreTxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/app_main_font"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="150dp"
        android:text="과목 수: "
        android:id="@+id/number_of_subjects" />

    <TextView
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="반올림: "
        android:layout_marginRight="50dp"
        android:textColor="#000000"
        android:textSize="10dp" />

    <Button
        android:id="@+id/btn_backhome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/app_main_font"
        android:text=" 돌아가기 "
        android:textStyle="bold"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="10dp"
        android:background="#0000CD"
        android:textColor="#ffffff"
        android:textSize="30sp"></Button>

</RelativeLayout>